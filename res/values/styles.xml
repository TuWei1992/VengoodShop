<resources>

    <style name="tip_dialog_text_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tv_click_selector</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
    </style>

    <style name="tip_dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoadingDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="LoadingDialogAnimationFade" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/loading_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/loading_dialog_exit</item>
    </style>
</resources>